    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "lib/**/*",
    "custom_typings/web3.d.ts",
    "custom_typings/system.d.ts"
